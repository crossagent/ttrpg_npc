{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python 调试程序: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "启动 CLI Runner",
            "type": "debugpy",
            "request": "launch",
            "module": "src.scripts.cli_runner",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "从存档加载游戏",
            "type": "debugpy",
            "request": "launch",
            "module": "src.scripts.cli_runner",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--load-record",
                "${input:recordFilePath}",
                "--load-round",
                "${input:roundNumber}"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Run Pytest: test_dm_agent",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-v", "-s", "tests/agents/test_dm_agent.py"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Run Pytest: test_player_agent",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-v", "-s", "tests/agents/test_player_agent.py"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Run Pytest: test_referee_agent",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-v", "-s", "tests/agents/test_referee_agent.py"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ],
    "inputs": [
        {
            "id": "roundNumber",
            "type": "promptString",
            "description": "请输入要加载的回合数",
            "default": "1"
        },
        {
            "id": "recordFilePath",
            "type": "promptString",
            "description": "请输入存档文件路径",
            "default": "game_records/debug_20250408_174755.log"
        }
    ]
}